<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <androidx.cardview.widget.CardView
            android:id="@+id/log_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/spotify"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/simple_text_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="100dp"
                android:layout_marginVertical="10dp"
                android:text="Log in"
                android:textColor="@color/main_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/load_circle"
                style="?android:attr/progressBarStyle"
                android:layout_width="29dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/main_background"
                android:progressTint="@color/main_background"
                android:visibility="invisible"
                tools:visibility="invisible" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:lines="7"
            android:maxEms="18"
            android:text="@string/data_info"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/terms_of_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxEms="18"
            android:text="terms of usage"
            android:textAlignment="center"
            android:textColor="#035FFF"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>