<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpotifyRooms" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotify</item>
        <item name="colorPrimaryDark">@color/spotify_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spotify</item>
        <item name="colorSecondaryVariant">@color/spotify_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/spotify_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SpotifyRooms.AppBarOverlay">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SpotifyRooms.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.null.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/info_shape</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@color/spotify_dark</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

</resources>